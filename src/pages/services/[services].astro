---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import type { ImageMetadata } from "astro";
import { getEntry } from "astro:content";
import config from "../../config";

export function getStaticPaths() {
    return [
        { params: { services: "developments" } },
        { params: { services: "planning-and-design" } },
        { params: { services: "renovations" } },
        { params: { services: "fit-outs" } },
        { params: { services: "demolition" } },
        { params: { services: "decks-and-kitchens" } },
    ];
}

const { services } = Astro.params;

const projectImages = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/images/residential/**/*.{jpeg,jpg,png,gif}",
);

const currentProjectEntry = await getEntry("services", services);
if (!currentProjectEntry) {
    return { status: 404 };
}
const data = currentProjectEntry.data;
---

<Layout title={`${data.name} | ${config.businessName}`}>
    <section class="h-[40rem] relative w-full overflow-hidden group">
        <Image
            src={projectImages[
                `/src/assets/images/residential/${data.featuredImage}`
            ]()}
            alt={data.name}
            class="object-cover w-full h-full scale-100 group-hover:scale-110 transition-transform duration-700 ease-in-out"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/70 to-black/30 z-2"
        >
        </div>
        <div
            class="absolute inset-0 flex flex-col items-center justify-center z-3 p-4"
        >
            <h1
                class="text-white text-5xl md:text-6xl font-bold mb-4 tracking-wider"
            >
                {data.name}
            </h1>
        </div>
    </section>
    <section class="py-16">
        <div class="max-w-screen-xl mx-auto grid grid-cols-12 gap-8 px-4">
            <h1 class="font-bold text-4xl col-span-12 md:col-span-4">
                <span class="text-primary">/</span>
                {data.name}
            </h1>
            <p class="col-span-12 md:col-span-8 font-light text-2xl md:pb-16">
                {data.description}
            </p>
        </div>
    </section>
    <section class="py-16 bg-gradient-to-b from-gray-100 to-white">
        <div class="max-w-screen-xl mx-auto px-4">
            <h2 class="font-bold text-4xl mb-8 text-center text-gray-800">
                Got a dream? Let's build it together
            </h2>
            <form class="bg-white p-8 md:p-12 max-w-2xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="col-span-1">
                        <label
                            for="fullName"
                            class="block text-gray-700 text-sm font-semibold mb-2"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            id="fullName"
                            name="fullName"
                            class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            required
                        />
                    </div>
                    <div class="col-span-1">
                        <label
                            for="phoneNumber"
                            class="block text-gray-700 text-sm font-semibold mb-2"
                            >Phone Number</label
                        >
                        <input
                            type="tel"
                            id="phoneNumber"
                            name="phoneNumber"
                            class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            required
                        />
                    </div>
                    <div class="col-span-2">
                        <label
                            for="email"
                            class="block text-gray-700 text-sm font-semibold mb-2"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            required
                        />
                    </div>
                </div>
                <div class="mt-8">
                    <p class="block text-gray-700 text-sm font-semibold mb-4">
                        Services Interested In:
                    </p>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex items-center">
                            <input
                                type="checkbox"
                                id="service-House Development"
                                name="services"
                                value="House Development"
                                class="form-checkbox h-5 w-5 text-primary rounded-full"
                            />
                            <label
                                for="service-House Development"
                                class="ml-2 text-gray-700"
                                >House Development</label
                            >
                        </div>
                        <div class="flex items-center">
                            <input
                                type="checkbox"
                                id="service-Planning and Design"
                                name="services"
                                value="Planning and Design"
                                class="form-checkbox h-5 w-5 text-primary rounded-full"
                            />
                            <label
                                for="service-Planning and Design"
                                class="ml-2 text-gray-700"
                                >Planning and Design</label
                            >
                        </div>
                        <div class="flex items-center">
                            <input
                                type="checkbox"
                                id="service-Renovations"
                                name="services"
                                value="Renovations"
                                class="form-checkbox h-5 w-5 text-primary rounded-full"
                            />
                            <label
                                for="service-Renovations"
                                class="ml-2 text-gray-700">Renovations</label
                            >
                        </div>
                        <div class="flex items-center">
                            <input
                                type="checkbox"
                                id="service-Demolition"
                                name="services"
                                value="Demolition"
                                class="form-checkbox h-5 w-5 text-primary rounded-full"
                            />
                            <label
                                for="service-Demolition"
                                class="ml-2 text-gray-700">Demolition</label
                            >
                        </div>
                    </div>
                </div>
                <div class="mt-10 flex items-center justify-center">
                    <button
                        type="submit"
                        class="bg-primary hover:bg-primary-dark text-white font-bold py-3 px-8 rounded-full focus:outline-none focus:shadow-outline transition duration-300 transform hover:scale-105"
                    >
                        Submit Your Dream
                    </button>
                </div>
            </form>
        </div>
    </section>
</Layout>
