---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import { Icon } from "astro-icon/components";
import type { ImageMetadata } from "astro";
import { getCollection } from "astro:content";

import config from "../../config.json";

import heroImg from "../../assets/images/hero.webp";
import residentialImg from "../../assets/images/gallery/gallery1.jpeg";
import planninganddesign from "../../assets/images/residential/planninganddesign.jpg";
import demolition from "../../assets/images/residential/demolition.jpg";
import renovation from "../../assets/images/residential/renovation.jpg";
import commercialImg from "../../assets/images/gallery/gallery3.jpeg";
import framingImg from "../../assets/images/residential/framing.jpg";

const services = [
    {
        name: "Residential",
        url: "/residential",
        image: residentialImg,
    },
    {
        name: "Commercial",
        url: "/commercial",
        image: commercialImg,
    },
];

const fields = [
    { name: "firstName", text: "First Name" },
    { name: "lastName", text: "Last Name" },
    { name: "email", text: "Email" },
    { name: "message", text: "Message" },
];

const projects = await getCollection("projects");

const projectImages = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/images/projects/**/*.{jpeg,jpg,png,gif}",
);

const residentialServices = [
    {
        title: "House Development",
        image: residentialImg,
        description:
            "We develop the house for you and handle the whole process, working alongside you to bring your dream home to life. Our comprehensive approach covers every aspect of home development, ensuring a seamless experience from start to finish. Whether you have a specific vision in mind or need inspiration, we're here to guide you through each step.",
    },
    {
        title: "Planning and Design",
        image: planninganddesign,
        description:
            "We understand that the planning and design phase is the foundation of your dream home. Our expert team is dedicated to guiding you through this crucial stage, ensuring that every detail aligns with your vision, lifestyle, and budget. ",
    },
    {
        title: "Renovations",
        image: renovation,
        description:
            "At Prime Developments NZ, we breathe new life into spaces of all ages and styles. Whether you're looking to update a historic gem, modernize a recent build, or completely transform your living space, our renovation expertise covers it all. We approach each project with creativity, precision, and respect for your home's unique character.",
    },
    {
        title: "Demolition",
        image: demolition,
        description:
            "We offer professional demolition services as part of our comprehensive construction and renovation solutions. Whether you're clearing space for new construction, removing outdated structures, or preparing for a major renovation, our expert demolition team ensures a safe, efficient, and environmentally responsible process.",
    },
];
---

<Layout title={config.businessName}>
    <section class="h-[40rem] relative w-full overflow-hidden group">
        <Image
            src={framingImg}
            alt="Hero image"
            class="object-cover w-full h-full scale-100 group-hover:scale-110 transition-transform duration-700 ease-in-out"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/70 to-black/30 z-2"
        >
        </div>
        <div
            class="absolute inset-0 flex flex-col items-center justify-center z-3 p-4"
        >
            <h1
                class="text-white text-5xl md:text-6xl font-bold mb-4 tracking-wider"
            >
                Residential
            </h1>
        </div>
    </section>

    <section class="py-16">
        <div class="max-w-screen-xl mx-auto grid grid-cols-12 gap-8 px-4">
            <!-- Main content row -->
            <h1 class="font-bold text-4xl col-span-12 md:col-span-4">
                <span class="text-primary">/</span> Residential
            </h1>
            <p class="col-span-12 md:col-span-8 font-light text-2xl md:pb-16">
                Prime Developments NZ offers a range of services for residential
                buildings. Though the main focus is on development we also place
                focus on renovations, developing plans for builds as well as
                adding decking or kitchens to residentials houses.
                <br /><br />
                Some of our clients want demolition work done on their property prior
                to the build. We handle this for our clients.
                <br /><br />
                We also work directly with our clients based on there requirements
                to develop the best home possible or to renovate their existing home.
            </p>
            <!-- "Our Services" heading -->
            <h2 class="font-bold text-4xl col-span-12 mt-12 mb-8 text-center">
                Our Services
            </h2>
            <!-- Enhanced Services section -->
            <div
                class="col-span-12 bg-gradient-to-b from-white to-gray-50 py-16 rounded-xl shadow-lg"
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 px-4">
                    {
                        residentialServices.map((service) => (
                            <div class="bg-white shadow-xl rounded-xl overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-2xl">
                                <div class="relative h-80 overflow-hidden">
                                    <Image
                                        src={service.image}
                                        alt={service.title}
                                        width={800}
                                        height={600}
                                        class="object-cover w-full h-full transition duration-500 ease-in-out transform hover:scale-110"
                                    />
                                    <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
                                        <h3 class="text-3xl font-bold text-white px-6 py-3 bg-black bg-opacity-60 rounded-lg">
                                            {service.title}
                                        </h3>
                                    </div>
                                </div>
                                <div class="p-8">
                                    <p class="text-gray-600 text-lg leading-relaxed mb-6">
                                        {service.description}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>
    <section class="py-16 bg-gray-100">
        <div class="max-w-screen-xl mx-auto px-4">
            <h2 class="font-bold text-4xl mb-8 text-center">Contact Us</h2>
            <form class="bg-white shadow-xl rounded-xl p-8">
                <div class="mb-6">
                    <label
                        for="fullName"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Full Name</label
                    >
                    <input
                        type="text"
                        id="fullName"
                        name="fullName"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        required
                    />
                </div>
                <div class="mb-6">
                    <label
                        for="phoneNumber"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Phone Number</label
                    >
                    <input
                        type="tel"
                        id="phoneNumber"
                        name="phoneNumber"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        required
                    />
                </div>
                <div class="mb-6">
                    <label
                        for="email"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        required
                    />
                </div>
                <div class="mb-6">
                    <p class="block text-gray-700 text-sm font-bold mb-2">
                        Services Interested In:
                    </p>
                    {
                        residentialServices.map((service) => (
                            <div class="mb-2">
                                <input
                                    type="checkbox"
                                    id={`service-${service.title}`}
                                    name="services"
                                    value={service.title}
                                    class="mr-2"
                                />
                                <label
                                    for={`service-${service.title}`}
                                    class="text-gray-700"
                                >
                                    {service.title}
                                </label>
                            </div>
                        ))
                    }
                </div>
                <div class="flex items-center justify-center">
                    <button
                        type="submit"
                        class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300"
                    >
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </section>
</Layout>
