<section class="py-16 bg-gradient-to-b from-gray-100 to-white">
    <div class="max-w-screen-xl mx-auto px-4">
        <h2 class="font-bold text-4xl mb-8 text-center text-gray-800">
            Got a dream? Let's build it together
        </h2>
        <form class="bg-white p-8 md:p-12 max-w-2xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="col-span-1">
                    <label
                        for="fullName"
                        class="block text-gray-700 text-sm font-semibold mb-2"
                        >Full Name</label
                    >
                    <input
                        type="text"
                        id="fullName"
                        name="fullName"
                        class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        required
                    />
                </div>
                <div class="col-span-1">
                    <label
                        for="phoneNumber"
                        class="block text-gray-700 text-sm font-semibold mb-2"
                        >Phone Number</label
                    >
                    <input
                        type="tel"
                        id="phoneNumber"
                        name="phoneNumber"
                        class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        required
                    />
                </div>
                <div class="col-span-2">
                    <label
                        for="email"
                        class="block text-gray-700 text-sm font-semibold mb-2"
                        >Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        required
                    />
                </div>
            </div>
            <div class="mt-8">
                <p class="block text-gray-700 text-sm font-semibold mb-4">
                    Services Interested In:
                </p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex items-center">
                        <input
                            type="checkbox"
                            id="service-House Development"
                            name="services"
                            value="House Development"
                            class="form-checkbox h-5 w-5 text-primary rounded-full"
                        />
                        <label
                            for="service-House Development"
                            class="ml-2 text-gray-700">House Development</label
                        >
                    </div>
                    <div class="flex items-center">
                        <input
                            type="checkbox"
                            id="service-Planning and Design"
                            name="services"
                            value="Planning and Design"
                            class="form-checkbox h-5 w-5 text-primary rounded-full"
                        />
                        <label
                            for="service-Planning and Design"
                            class="ml-2 text-gray-700"
                            >Planning and Design</label
                        >
                    </div>
                    <div class="flex items-center">
                        <input
                            type="checkbox"
                            id="service-Renovations"
                            name="services"
                            value="Renovations"
                            class="form-checkbox h-5 w-5 text-primary rounded-full"
                        />
                        <label
                            for="service-Renovations"
                            class="ml-2 text-gray-700">Renovations</label
                        >
                    </div>
                    <div class="flex items-center">
                        <input
                            type="checkbox"
                            id="service-Demolition"
                            name="services"
                            value="Demolition"
                            class="form-checkbox h-5 w-5 text-primary rounded-full"
                        />
                        <label
                            for="service-Demolition"
                            class="ml-2 text-gray-700">Demolition</label
                        >
                    </div>
                </div>
            </div>
            <div class="mt-10 flex items-center justify-center">
                <button
                    type="submit"
                    class="bg-primary hover:bg-primary-dark text-white font-bold py-3 px-8 rounded-full focus:outline-none focus:shadow-outline transition duration-300 transform hover:scale-105"
                >
                    Submit Your Dream
                </button>
            </div>
        </form>
    </div>
</section>
